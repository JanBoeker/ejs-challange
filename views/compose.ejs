<%- include("partials/header.ejs") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" required autocomplete="off">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" rows="5" cols="30" name="postContent" required autocomplete="off"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


