<%- include("partials/header.ejs") -%>

<h1>Home</h1>
<p> <%= homeStartingContent %> </p>

<% newPosts.forEach(function(post) { %>
  <h3> <%= post.title %> </h3>

  <% if (post.content.length > 100) { %>
    <p> <%= post.content.substring(0, 100) %> ... <a href="/posts/<%=post.title%>">Read More</a></p>

  <% } else { %>
    <p> <%= post.content %> </p>
  <% } %>

<% }) %>


